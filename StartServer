#!/usr/bin/env python

import os
import sys
import subprocess

# UniSecrets/
exec_dir = os.path.abspath(os.path.dirname(os.path.abspath(__file__)))
os.chdir(exec_dir)

# run make client
subprocess.call(['make', 'client'])

# start server
server_dir = os.path.abspath(exec_dir + os.sep + 'server')
os.chdir(server_dir)
subprocess.call(['nodejs', 'server.js'])
