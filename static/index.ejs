<html>

  <head>
    <% include partials/scripts %>

    <!-- Controller -->
    <script src="js/index_controller.js"></script>

  </head>

  <body ng-app="mainApp" ng-controller="main_controller">

    <% include partials/nav %>

    <div class="container">
        <div class="row">
            <h1>Welcome to UniSecrets!</h1>
        </div>
        <div class="row">
            <div class="col s6">
                <a class="waves-effect waves-light btn-large" ng-click="goto_login()">Log in</a>
            </div>
            <div class="col s6">
                <a class="waves-effect waves-light btn-large" ng-click="goto_register()">Register</a>
            </div>
        </div>
    </div>
    
    <div class="container">
        <a class="btn-large waves-effect waves-light red right z-depth-3" href="new_post_anon">Submit a new secret</a>
        
        <br />
    
        <h1>Some of the newest secrets</h1>
        <div class="secret-list">
            <div ng-repeat="apost in posts" class="secret-container card-medium z-depth-1">
                <div class="secret-university" style="padding-left:15px">
                    <h4>Found at: {{apost.college}}</h4>
                </div>
                <div class="card-content" style="padding-left:15px">
                    <div ng-bind-html="apost.text"></div>
                </div>
            </div>
        </div>
        
        <br />
        
        <h3>Log in to see more</h3>
        <a class="waves-effect waves-light btn-large" ng-click="goto_login()">Log in</a>
    </div>

  </body>
</html>
