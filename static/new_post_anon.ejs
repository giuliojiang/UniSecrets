<html>

  <head>

    <title>UniSecrets - New Post</title>

    <% include partials/scripts %>

    <!-- Controller -->
    <script src="js/new_post_anon_controller.js"></script>

  </head>

  <body ng-app="mainApp" ng-controller="main_controller">

    <% include partials/nav %>

    <div class="container" ng-show="post_sent">
        <h1>Secret submitted</h1>
        
        <h3>Your post will now be moderated and will be published shortly</h3>
        
        <a class="waves-effect waves-light btn-large" ng-click="goto_dashboard()">Back</a>
    </div>
    
    <div class="container" ng-hide="post_sent">

      <h2>Tell us, tell us everything!</h2>

      <div class="row">
        <div class="col s12">
          <form>

            <label> Tell us your secret! <textarea ng-model="text" class="materialize-textarea"></textarea></label>

            <button class="btn waves-effect waves-light" type="submit" name="action" ng-click="post()">Submit
              <i class="material-icons right">send</i>
            </button>
          </form>
        </div>
      </div>
    </div>

  </body>
</html>
